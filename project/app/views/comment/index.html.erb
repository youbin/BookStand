<h1> Listing Comments </h1>

<table>
  <thead>
    <tr>
      <th>key</th>
      <th>u_id</th>
      <th>cm_comment</th>
      <th>cm_time</th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td> <%= comment["key"] %> </td>
        <td> <%= comment["u_id"] %> </td>
        <td> <%= comment["cm_comment"] %> </td>
        <td> <%= comment["cm_time"] %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
